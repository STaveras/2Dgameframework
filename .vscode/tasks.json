{
    "tasks": [
        {
            "type": "shell",
            "label": "Compile shaders",
            "command": "./compile-shaders.sh",
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-D","_DEBUG",
                "-std=c++17","-stdlib=libc++",
                "-fdiagnostics-color=always",
                "-I",
                "../add/**",
                "-g",
                "main.cpp",
                "Engine2D.cpp",
                "EventSystem.cpp",
                "ProgramStack.cpp",
                "InputManager.cpp",
                "StateMachine.cpp",
                "ObjectManager.cpp",
                "Game.cpp",
                "GameObject.cpp",
                "GameState.cpp",
                "Image.cpp",
                "Frame.cpp",
                "Animation.cpp",
                "AnimationManager.cpp",
                "AnimationUtils.cpp",
                "Square.cpp",
                "Camera.cpp",
                "Timer.cpp",
                "Window.cpp",
                "Player.cpp",
                "IRenderer.cpp",
                "Renderer.cpp",
                "RendererVK.cpp",
                "IInput.cpp",
                "InputEvent.cpp",
                "Trigger.cpp",
                "UpdateBackgroundOperator.cpp",
                "SDSParser.cpp",
                "PlatformInput.cpp",
                "PlatformKeyboard.cpp",
                "ImageLoaders.cpp",
                "Debug.cpp",
                "-o",
                "${workspaceFolder}/bin/${workspaceFolderBasename}",
                "-MMD","-MF",
                "project.d",
                "-lglfw",
                "-lvulkan",
                "-ltinyxml2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "make",
            "command": "/usr/bin/make",
            "args": [
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}