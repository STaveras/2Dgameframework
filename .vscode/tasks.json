{
    "tasks": [
        {
            "label": "Build Project", // WIP
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build",
            "group": {
              "kind": "build",
              "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Setup Environment (macOS)",
            "type": "shell",
            "command": "source ./utl/setup-env.sh",
            "group": {
              "kind": "build",
              "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file (Windows)",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\bin\\${workspaceFolderBasename}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C/C++: clang++ build project (macOS, debug)",
            "command": "${workspaceFolder}/utl/build-macOS.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Setup Environment (macOS)"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build (macOS)",
            "command": "source ./utl/post-build.sh",
            "group": {
              "kind": "build",
              "isDefault": false
            },
            "dependsOn": [
                "C/C++: clang++ build project (macOS)"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build (macOS, debug)",
            "command": "source ./utl/post-build.sh",
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "dependsOn": [
                "C/C++: clang++ build project (macOS, debug)"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Compile shaders using glslc",
            "command": "./utl/compile-shaders.sh",
            "windows": {
              "command": ".\\utl\\compile-shaders.bat"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ],
    "version": "2.0.0"
}