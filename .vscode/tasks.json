{
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build",
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\bin\\${workspaceFolderBasename}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file (macOS)",
            "command": "clang++",
            "args": [
                "-std=c++17","-stdlib=libc++",
                "-x", "objective-c++",   // Compile as Objective-C++
                "-framework", "Metal",
                "-framework", "Cocoa",
                "-framework", "QuartzCore",
                "-fdiagnostics-color=always",
                "-I",
                "../ext/**",
                "-g",
                "main.cpp",
                "Engine2D.cpp",
                "EventSystem.cpp",
                "ProgramStack.cpp",
                "InputManager.cpp",
                "StateMachine.cpp",
                "ObjectManager.cpp",
                "Game.cpp",
                "GameObject.cpp",
                "GameState.cpp",
                "Frame.cpp",
                "Animation.cpp",
                "AnimationManager.cpp",
                "AnimationUtils.cpp",
                "Square.cpp",
                "Camera.cpp",
                "Timer.cpp",
                "Window.cpp",
                "Player.cpp",
                "IRenderer.cpp",
                "Renderer.cpp",
                "RendererVK.cpp",
                "TextureVK.cpp",
                "IInput.cpp",
                "InputEvent.cpp",
                "Trigger.cpp",
                "UpdateBackgroundOperator.cpp",
                "SDSParser.cpp",
                "PlatformInput.cpp",
                "PlatformKeyboard.cpp",
                "ImageLoaders.cpp",
                "Sprite.cpp",
                "TileSet.cpp",
                "Debug.cpp", // TODO: remove this somehow for release
                "-o",
                "${workspaceFolder}/bin/${workspaceFolderBasename}",
                "-MMD","-MF",
                "project.d",
                "-lglfw",
                "-lvulkan",
                "-ltinyxml2",
                "-lsimdjson"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": [
                // "Compile shaders using glslc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file (macOS, debug)",
            "command": "clang++",
            "args": [
                "-D","_DEBUG",
                "-std=c++17","-stdlib=libc++",
                "-x", "objective-c++",   // Compile as Objective-C++
                "-framework", "Metal",
                "-framework", "Cocoa",
                "-framework", "QuartzCore",
                "-fdiagnostics-color=always",
                "-I",
                "../ext/**",
                "-g",
                "main.cpp",
                "Engine2D.cpp",
                "EventSystem.cpp",
                "ProgramStack.cpp",
                "InputManager.cpp",
                "StateMachine.cpp",
                "ObjectManager.cpp",
                "Game.cpp",
                "GameObject.cpp",
                "GameState.cpp",
                "Frame.cpp",
