    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${workspaceFolderBasename}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "C/C++: cl.exe build active file",
        },
        {
            "name": "clang++ - Build and debug program (mac, vulkan)",
            // "type": "cppdbg",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${workspaceFolderBasename}",
            "args": ["--dataPath", "${workspaceFolder}/bin/data", "--debug", "--vulkan"],
            "stopAtEntry": false, // Seems to do absolutely nothing with lldb+clang
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "C/C++: clang++ build active file (macOS, debug)",
            "targetArchitecture":"arm64"
        },
        {
            "name": "clang++ - Debug program (mac)",
            // "type": "cppdbg",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${workspaceFolderBasename}",
            "args": ["--dataPath", "${workspaceFolder}/bin/data", "--debug"],
            "stopAtEntry": false, // Seems to do absolutely nothing with lldb+clang
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "targetArchitecture":"arm64"
        },
        {
            "name": "clang++ - Debug program (mac, vulkan)",
            // "type": "cppdbg",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${workspaceFolderBasename}",
            "args": ["--dataPath", "${workspaceFolder}/bin/data", "--debug", "--vulkan"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "targetArchitecture":"arm64"
        }
    ]
}